# Production Environment Variables for Google Cloud Run
# Copy this to .env.production and fill in your actual values

# Environment
ENV=production
LOG_LEVEL=INFO

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# API Authentication
API_AUTH_KEY=your_secure_api_key_here

# Supabase Configuration (if using)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# CORS Settings
TRUSTED_HOSTS=your-domain.com,*.your-domain.com

# Security Settings
ENABLE_HTTPS_REDIRECT=true

# Performance Settings
MAX_WORKERS=4

# Database URLs (if using databases)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# OAuth Settings (if using)
# AUTH0_DOMAIN=your-auth0-domain.auth0.com
# AUTH0_CLIENT_ID=your_auth0_client_id
# AUTH0_CLIENT_SECRET=your_auth0_client_secret

# Additional API Keys
# GROQ_API_KEY=your_groq_api_key_if_using_groq